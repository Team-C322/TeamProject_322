pipeline {
	agent any

	tools {
		maven 'Maven3'
		jdk 'JDK21'
	}

	triggers {
		pollSCM('H/5 * * * *')
	}

	stages {
		stage('Checkout') {
			steps {
				checkout scm
				echo "üì¶ –ü—Ä–æ–≤–µ—Ä—è–µ–º –≤–µ—Ç–∫—É: ${env.BRANCH_NAME}"
			}
		}

		stage('Build') {
			when {
				anyOf {
					branch 'main'
					changeRequest()  // —ç—Ç–æ PR
				}
			}
			steps {
				echo "üöÄ –°–æ–±–∏—Ä–∞–µ–º –∏ –æ—Ç—á–∏—â–∞–µ–º –ø—Ä–æ–µ–∫—Ç mvn clean..."
				sh 'mvn -B clean'
			}
		}

		stage('Run Tests') {
			when {
				anyOf {
					branch 'main'
					changeRequest()
				}
			}
			steps {
				sh 'mvn test'
			}
		}

		stage('Merge') {
			when {
				branch 'main'
			}
			steps {
				echo "–ú—ë—Ä–¥–∂ –ø–æ—Å–ª–µ —Ä–µ–≤—å—é"
			}
		}
	}

	post {
		always {
			script {
				if (env.BRANCH_NAME == 'main' || env.CHANGE_ID) {
					junit '**/target/surefire-reports/*.xml'
				}
			}
		}
		success {
			echo "‚úÖ Pipeline —É—Å–ø–µ—à–Ω–æ –≤—ã–ø–æ–ª–Ω–µ–Ω!"
		}
		failure {
			echo "‚ùå Pipeline —É–ø–∞–ª :("
		}
	}
}